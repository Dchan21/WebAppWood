@model WebAppWood.Models.ModelPalos

@{
    ViewBag.Title = "InsertarMedidaArboles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Insertar Arboles</h2>
<div class="form-horizontal">
    <div>
        <form class="contact-form" method="post">
            <div class="form-group">
                <input class="form-control" type="hidden" readonly name="IdMedicion" id="IdMedicion" value="@Model.Compra">
                <div style=" margin: 1% 5%;padding:15px">
                    <div class="col-sm-4">
                        <label class="col-sm-3 control-label">Finca: </label>
                        <input class="col-sm-4" type="text" readonly name="Finca" value="@Model.Finca">
                    </div>
                    <div class="col-sm-4">
                        <label class="col-sm-3 control-label">Fecha: </label>
                        <input class="col-sm-4" type="text" readonly name="Fecha" value="@Model.Fecha.ToShortDateString()">
                    </div>
                    <div class="col-sm-4">
                        <label class="col-sm-3 control-label">Ubicacion: </label>
                        <input class="col-sm-4" type="text" readonly name="Ubicacion" value="@Model.Ubicacion">
                    </div>
                    <div class="col-sm-4">
                        <label class="col-sm-3 control-label">Responsable: </label>
                        <input class="col-sm-4" type="text" readonly name="Consecutivo" value="@Model.Encargado">
                    </div>
                    <div class="col-sm-4">
                        <label class="col-sm-3 control-label">Tipo: </label>
                        <input class="col-sm-4" type="text" readonly name="Tipo" id="Tipo" value="@Model.Tipo">
                    </div>
                </div>
                <div class="col-sm-10 " style="border: 1px solid #2c77ba; border-radius: 5px; margin: 1% 5%;padding:15px">
                    <div class="col-sm-5" style="padding:15px;">
                        <label class="col-sm-5 control-label" style="text-align:left"><strong>Altura en Metros</strong><br>(Inserte la altura de la troza en Metros.)</label>
                        <input class="col-sm-2" style="margin-top:10px" type="number" step="0.001" name="AltoMetros" id="AltoMetros">
                    </div>
                    <div class="col-sm-5" style="padding:15px;">
                        <label class="col-sm-5 control-label" style="text-align:left"><strong>Circunferencia en Centimetros</strong><br>(Inserte la circunferencia en centimetros.)</label>
                        <input class="col-sm-2" style="margin-top:10px" type="number" step="0.001" name="Circunferencia" id="Circunferencia">
                    </div>
                    <div class="col-sm-2" style="padding:15px;">
                        <button id="addTree" type="button" style="margin-top:10px" class="btn btn-xl btn-block btn-primary">Agregar</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-1 form-group text-center" style="left:44%">
                <button type="submit" onclick="EnviarData()" class="btn btn-xl btn-block btn-primary">Send</button>
            </div>
        </form>
        <div id="tableContent" class="divtable">
        </div>
    </div>
</div>



